{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist", // Output folder untuk file JS
    "rootDir": "./src", // Folder sumber TypeScript
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"], // Menyertakan semua file di dalam folder src
  "exclude": ["node_modules"] // Menghindari folder node_modules
}
